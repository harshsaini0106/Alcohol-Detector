#include <Wire.h>
#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(0x27, 16, 2);

#define LED 2
#define Buzzer 8

#define Sensor A1

void setup() {
  Serial.begin(9600);
  lcd.init();
  lcd.backlight();
  pinMode(LED, OUTPUT);
  pinMode(Buzzer, OUTPUT);
  pinMode(Sensor, INPUT);

  lcd.setCursor(0,0);
  lcd.print("Alcohol Detector");
  delay(2000);
  lcd.clear();

  // Test buzzer
  digitalWrite(Buzzer, HIGH);
  delay(500);
  digitalWrite(Buzzer, LOW);
}

void loop() {
  int value = analogRead(Sensor);
  Serial.print("Sensor Value: ");
  Serial.println(value);

  lcd.setCursor(0, 0);
  lcd.print("Value: ");
  lcd.print(value);
  lcd.print("   ");

  if (value > 350) {  // lower threshold for MQ-3
    digitalWrite(LED, HIGH);
    digitalWrite(Buzzer, HIGH);
    lcd.setCursor(0, 1);
    lcd.print("ALCOHOL DETECTED ");
  } else {
    digitalWrite(LED, LOW);
    digitalWrite(Buzzer, LOW);
    lcd.setCursor(0, 1);
    lcd.print("SAFE              ");
  }

  delay(500);
}
